<h2><%= @merchant.username %></h2>
  <p><%=@merchant.email %></p>
  <ul class="merchant-stats">
    <li><strong>Total revenue:</strong> <%= number_to_currency(@merchant.total_revenue) %></li>
    <li><span class="badge badge-pill badge-info"><%= @merchant.orders.where(status: "paid").count %></span><strong>Completed Orders:</strong> <%= number_to_currency(@merchant.paid_order_items) %></li>
    <li><span class="badge badge-pill badge-info"><%= @merchant.orders.where(status: "pending").count %></span><strong>Pending Orders:</strong> <%= number_to_currency(@merchant.pending_order_items) %></li>
  </ul>

<br><section class="merchant-products">
  <table class="table">
    <h4>My Products</h4>
    <thead class="thead-light">
      <tr>
        <th>Name</th>
        <th>Categories</th>
        <th>Price</th>
        <th>Description</th>
        <th>In Stock</th>
        <% session[:merchant_id] == @merchant.id %>
          <th>Update</th>
          <th>Status</th>
      </tr>
    </thead>
    <tbody>
      <% @merchant.products.order(:id).each do |product| %>
        <tr>
          <td><%= product.name %></td>
          <td>
        
            <% product.categories.each do |category| %>
              <span class="badge badge-light"><%= category.name %></span>
            <%end %>

          </td>
          <td><%= number_to_currency(product.price) %></td>
          <td><%= product.description %></td>
          <td><%= product.stock %></td>
          <td><%= link_to "Update", edit_product_path(product), class: "btn btn-primary" %></td>
          <td>
            <% if product.active? %>
            <%= link_to "Active", update_status_product_path(product), class: "btn btn-primary", method: :patch %>
            <% else %>
            <%= link_to "Inactive", update_status_product_path(product), class: "btn btn-primary inactive", method: :patch %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</section>
<br>
<br>


<h4>My Orders</h4>
<table class="table">
  <thead  class="thead-light">
    <tr>
      <th scope="col">Order #</th>
      <th scope="col">Created On</th>
      <th scope="col">Status</th>   
    </tr>
  </thead>
  <tbody>
    <% @merchant.orders.each do |order| %>
      <tr>
        <td scope="row"><%= link_to "#00000#{order.id}", order_confirmation_path(order) %></td>
        <td><%= link_to order.created_at.strftime("%B %d, %Y"), order_path(order.id) %></td> 
        <td><%= order.status %></td>   
      </tr>
    <% end %>


  <section>
    <h2 class="dashboard-headers">Order Statistics</h2>

    <table class="table table-borderless table-hover">
      <thead>
        <tr>
          <th>Total Number of Orders</th>
          <th>Total Revenue</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><%= Order.total_number_of_orders(@current_merchant) %></td>
          <td>$<%= Order.total_revenue(@current_merchant) %></td>
        </tr>
      </tbody>
    </table>
  </section>
  
 <section class="status-container">
   <p class="filter-label">Filter By Status:</p>
   <section class="filter">
      <%= form_with url: product_set_status_path do |form| %>
        <%= form.select :status, options_for_select(["all", "pending", "paid", "completed", "cancelled"], @status)%>
        <%= form.submit %>
      <% end %>  
    </section>
  </section>
<section>
<h2 class="header-padding" class="dashboard-headers">List of Orders by Status - <%= @status %></h2>
  <table class="table table-borderless table-hover">
    <thead>
    <tr>
        <th>Order ID</th>
        <th>Status</th>
        <th>Order Items</th>
    </tr>
    </thead>
  
  <tbody>
    <% orders = 0%>
    <% if @status == "all"%>
    <% orders = @current_merchant.orders %>
    <% else %>
    <% orders = @current_merchant.orders.where(status:@status) %>
    <% end %>
    <% orders.each do |order|%> 
    <tr>
        <td><%= link_to order.id, order_path(order), method: :get, class:"dashboard-links"%></td>
        <td><%= Order.find(order.id).status%></td>
        <td><%= link_to "view", order_items_order_path(order), class:"dashboard-links"%></td>
        <%#= class="btn btn-primary" href="order_items_order_path" role="button">View%>
    </tr>
  </tbody>
  <% end %>
</table>
</section>

   <section>
    <h2 class="dashboard-headers">Order Statistics by Status - <%= @status %></h2>
    <table class="table table-borderless table-hover">
      <thead>
        <tr>
          <th>Total Number of <%= @status.capitalize %> Orders</th>
          <th>Total Revenue of <%= @status.capitalize %> Orders</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><%= Order.total_number_of_orders_by_status(merchant: @current_merchant, status: @status) %></td>
          <td>$<%= Order.total_revenue_by_status(merchant: @current_merchant, status: @status) %></td>
        </tr>
      </tbody>
    </table>
  </section>
