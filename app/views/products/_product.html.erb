<div class="card" style="width: 30rem;">
  <%= link_to product_path(product) do %>
   <%= image_tag "#{product.photo_url}", alt: "product image", class: "card-img-top" %>
  <% end %>
  <div class="card-body">
    <h6 class="card-title"><%= link_to product.name, product_path(product) %></h6>
    <h6 class="card-subtitle mb-2 text-muted"><%= number_to_currency(product.price) %></h6>
    <% if product.quantity == 0 %>
      <p><a class="text-white bg-dark">Out of Stock</a></p>
    <% else %>
      <%= link_to "Add to cart", cart_path(product), method: :post, class: "btn btn-primary" %>
    <% end %>
  </div>
</div>

