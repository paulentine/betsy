<%# Intent for this page:

This is the Explore Experiences page from our design meeting.
A few options to explore categories, with a random product list below. %>

<main>
  <h3 class="title">List of Experiences</h3>

  <div class="product">
    <% @products.each do |product| %>
      <article>
          <%= link_to product.name, product_path(product.id) %> | <%= number_to_currency product.price %>
          <%= form_with model: product.order_items.new do |f| %>
            <%= f.hidden_field :product_id, value: product.id %>
            <%= f.number_field :quantity %>
            <%= f.submit "Add to cart" %>
          <% end %>
      </article>
    <% end %>
  </div>
</main>

  <%= render partial: "shop", locals: { product_list: @products } %>