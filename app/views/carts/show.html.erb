<main>
  <% if @order_items.any? %>
    <% @order_items.each do |item| %>
      <p><%= item.product.name %> </p>
      <p><%= link_to "Delete", order_item_path(item), :data => {:confirm => "Are you sure?", :method => "delete"} %></p>
        <%# Edit quantity form %>
          <%= form_with model: item do |f|%>
            <%= f.hidden_field :product_id, value: item.product.id %>
            <%= f.number_field :quantity %>
            <%= f.submit "Edit quantity" %>
          <%end%>
        <%# End of edit quantity form %>

      <p> Unit Price: <%= number_to_currency item.product.price %> | Quantity: <%= item.quantity %> | Total Price: </p>
    <% end %>
    <p>Your Total: </p>
  <% else %>
    <p>Your shopping cart is empty.</p>
  <% end %> 
</main>