<% if @order_items.any? %>
  <% @order_items.each do |item| %>
    <p><%= item.product.name %> </p>
    <p><%= link_to "Delete", order_item_path(item), :data => {:confirm => "Really really?", :method => "delete"} %></p>
    <p> Unit Price: <%= number_to_currency item.product.price %> | Quantity: <%= item.quantity %> | Total Price: </p>
  <% end %>
  <p>Your Total: </p>
<% else %>
  <p>Your shopping cart is empty.</p>
<% end %> 